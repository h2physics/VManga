<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/manga_item_cv"
        android:layout_width="100dp"
        android:layout_height="180dp"
        app:cardElevation="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/manga_avatar_imv"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/manga_title_tv"
                android:text="Hiệp khách giang hồ"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="@+id/manga_avatar_imv"
                app:layout_constraintTop_toBottomOf="@+id/manga_avatar_imv"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>